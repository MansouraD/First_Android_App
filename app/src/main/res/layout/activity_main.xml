<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="test"
            android:text="Welcome"
            android:textColor="@color/turquoise"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="test"
            android:text="Qui envoie?"
            android:textColor="@color/turquoise"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />


        <EditText
            android:id="@+id/prenomEmetteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prenom"
            android:textColorHint="@color/turquoise" />


        <EditText
            android:id="@+id/nomEmetteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:textColorHint="@color/turquoise" />

        <EditText
            android:id="@+id/CniEmetteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CNI"
            android:textColorHint="@color/turquoise" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="test"
            android:text="Qui reçoit?"
            android:textColor="@color/turquoise"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/prenomRecepteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prenom "
            android:textColorHint="@color/turquoise" />

        <EditText
            android:id="@+id/nomRecepteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:textColorHint="@color/turquoise" />

        <EditText
            android:id="@+id/CniRecepteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CNI"
            android:textColorHint="@color/turquoise" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="test"
            android:text="Opération:"
            android:textColor="@color/turquoise"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />


        <EditText
            android:id="@+id/montant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Montant"
            android:textColorHint="@color/turquoise" />


        <Button
            android:id="@+id/btnAjouter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/turquoise"
            android:text="Enregistrer" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>